<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
    </style>
    <style name="OverlaySelection">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Paragraph" parent="@style/TextAppearance.AppCompat">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="LinkText" parent="@style/TextAppearance.AppCompat">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:textColor">?android:attr/textColorLink</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="OverlayText" parent="Section">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">@color/blackTransparent75</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="FloatingText" parent="Section.Small">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">@color/blackTransparent50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_small</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin_small</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin_small</item>
    </style>
    <style name="MangaTag" parent="Section.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
    </style>
    <style name="Section">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/vertical_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
    </style>
    <style name="Section.Small">
        <item name="android:paddingTop">@dimen/vertical_margin_small</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_small</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin_small</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_small</item>
    </style>
    <style name="Section.Smallest">
        <item name="android:paddingTop">@dimen/vertical_margin_smallest</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_smallest</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin_smallest</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_smallest</item>
    </style>
    <style name="DescName" parent="@style/TextAppearance.AppCompat">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_smallest</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DescValue" parent="@style/TextAppearance.AppCompat">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_smallest</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin_small</item>
    </style>
    <style name="HorizontalListRV">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="VerticalListRV" parent="Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="VerticalScrollView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="ButtonBackground">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/vertical_margin_small</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_small</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin_small</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_small</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
